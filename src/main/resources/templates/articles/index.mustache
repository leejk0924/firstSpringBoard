{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>

    </tr>
    </thead>
    <tbody>

    <!--
    모델에 등록된 데이터를 사용할 때는 #을 사용하고 다 사용하고 닫아야한다.
    -->
<!--   articleList 의 데이터가 반복해서 출력 (마치 for 문 처럼 사용된다. ) -->
    {{#articleList}}
        <tr>
            <th>{{id}}</th>
            <td>
                <a href="/articles/{{id}}">{{title}}</a>
            </td>
            <td>{{content}}</td>
        </tr>
    {{/articleList}}
    </tbody>
</table>
<button>
    <a href="/articles/new">New Article</a>
</button>


{{>layouts/footer}}
